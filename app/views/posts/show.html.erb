<section class="section">
  <div class="container">
    <h1 class="title">
      <%= @post.title %>
    </h1>
    <h1 class="content">
      <%= @post.content %>
    </h1>
    <p class="level-item">
      <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
    </p>
  </div>
</section>